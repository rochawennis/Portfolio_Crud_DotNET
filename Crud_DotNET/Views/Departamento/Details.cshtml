@model Crud_DotNET.Models.Departamento

@{
    ViewData["Title"] = "Detalhes do Departamento";
}

<h1>Detalhes do Departamento</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Departamento</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Editar</a>
    <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
</div>
