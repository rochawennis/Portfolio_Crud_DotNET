@model IEnumerable<Crud_DotNET.Models.TipoUsuario>

@{
    ViewData["Title"] = "Home";
}

<h2>
    Cadastro de Departamentos <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Departamento</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.id">Editar</a>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
